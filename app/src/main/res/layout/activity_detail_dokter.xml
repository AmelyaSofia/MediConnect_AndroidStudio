<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/imgDetailDokter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_launcher_foreground" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvDetailNamaDokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Dokter"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"
                    android:layout_marginBottom="4dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvDetailSpesialis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi dokter"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:gravity="start" />

            <Button
                android:id="@+id/btnAturJanjiTemu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atur Janji Temu"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_purple"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:elevation="6dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|start"
        android:layout_margin="12dp"
        android:background="@drawable/bg_button_round"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Kembali"
        app:tint="@color/white"
        android:elevation="4dp" />


</FrameLayout>
