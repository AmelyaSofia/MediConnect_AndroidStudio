            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaDokter4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Lutfi Shidqi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"/>

                <TextView
                    android:id="@+id/tvSpesialis4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Kulit"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardDokter5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDokter5"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/doktermaria"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaDokter5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Maria Yesinta"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"/>

                <TextView
                    android:id="@+id/tvSpesialis5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis THT"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardDokter6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDokter6"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/dokterfarsya"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaDokter6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Iqtifarsya Dewita"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"/>

                <TextView
                    android:id="@+id/tvSpesialis6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Mata"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
