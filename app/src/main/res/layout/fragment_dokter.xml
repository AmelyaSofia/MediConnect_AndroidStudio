<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Dokter"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#2E2E2E"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/cardDokter1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDokter1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/doktersofia"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaDokter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Amelya Sofia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"/>

                <TextView
                    android:id="@+id/tvSpesialis1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Anak"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardDokter2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDokter2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/dokterhabib"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaDokter2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Muhammad Habibin"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"/>

                <TextView
                    android:id="@+id/tvSpesialis2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Jantung"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardDokter3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDokter3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/dokterais"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaDokter3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Aisyah Aida"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#2E2E2E"/>

                <TextView
                    android:id="@+id/tvSpesialis3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Gigi"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#555555"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardDokter4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:elevation="8dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgDokter4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/dokterlutfi"
