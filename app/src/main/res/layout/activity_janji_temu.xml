<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_gradient">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/bg_button_round"
        android:padding="10dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/white"
        android:contentDescription="Kembali"
        android:elevation="6dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgDokterJanji"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNamaDokterJanji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Dokter"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvSpesialisJanji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spesialis"
                        android:textSize="16sp"
                        android:textColor="#666" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal:"
                android:textSize="16sp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnPilihTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Tanggal Janji" />

            <TextView
                android:id="@+id/tvTanggalDipilih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum dipilih"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Waktu:"
                android:textSize="16sp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnPilihWaktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Waktu Janji" />

            <TextView
                android:id="@+id/tvWaktuDipilih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum dipilih"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metode Pembayaran:"
                android:textSize="16sp"
                android:layout_marginTop="20dp" />

            <RadioGroup
                android:id="@+id/rgMetodePembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbAsuransi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asuransi" />

                <RadioButton
                    android:id="@+id/rbMandiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mandiri" />
            </RadioGroup>

            <Button
                android:id="@+id/btnKonfirmasiJanji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Janji"
                android:layout_marginTop="24dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_purple" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>